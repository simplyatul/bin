alias gs='echo git status; git status'
alias gl='echo git log --name-status --decorate; git log --name-status --decorate'
alias gcm='echo git checkout master; git checkout master'
alias gci='echo git checkout integration; git checkout integration'
alias gcd='echo git checkout development; git checkout development'
alias gp='echo git pull; git pull'
alias gmd='echo git merge --no-ff development; git merge --no-ff development'
alias gmi='echo git merge --no-ff integration; git merge --no-ff integration'
alias gc='echo git commit; git commit'
alias gd='echo git diff; git diff'
alias gdc='echo git diff --cached; git diff --cached'
alias mc='echo time mvn clean; time mvn clean'
alias mi='echo time mvn install; time mvn install'
alias gb='echo git branch; git branch'
alias gco='echo git checkout; git checkout '

# Remember git credentials for 30 days
git config --global credential.helper 'cache --timeout=2592000'

